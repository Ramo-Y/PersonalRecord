<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PersonalRecord.App.Views.MovementRecordDetailView"
             x:Name="MovementRecordDetailViewXaml"
             xmlns:viewModels="clr-namespace:PersonalRecord.App.ViewModels"
             xmlns:material="http://schemas.enisn-projects.io/dotnet/maui/uraniumui/material"
             xmlns:extensions="clr-namespace:PersonalRecord.Infrastructure.Extensions;assembly=PersonalRecord.Infrastructure"
             x:DataType="viewModels:MovementRecordDetailViewModel"
             Title="{extensions:Localize MovementRecord}">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="20"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="20"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="5"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="5"/>
        </Grid.RowDefinitions>

        <Label Grid.Column="1" Grid.Row="1"
               Margin="5, 2"
               VerticalTextAlignment="Center"
               Text="{extensions:Localize Movement}"/>
        <material:PickerField Grid.Column="1" Grid.Row="2"
                              Margin="5, 2"
                              ItemsSource="{Binding Movements}"
                              ItemDisplayBinding="{Binding Name}"
                              SelectedItem="{Binding MovementRecord.Movement}"/>

        <Label Grid.Column="1" Grid.Row="3"
               Margin="5, 2"
               VerticalTextAlignment="Center"
               Text="{extensions:Localize Reps}"/>
        <Entry Grid.Column="1" Grid.Row="4"
               Margin="5, 2"
               VerticalTextAlignment="Center"
               Keyboard="Numeric"
               Text="{Binding MovementRecord.Reps}"/>

        <Label Grid.Column="1" Grid.Row="5"
               Margin="5, 2"
               VerticalTextAlignment="Center"
               Text="{extensions:Localize Weight}"/>
        <Entry Grid.Column="1" Grid.Row="6"
               Margin="5, 2"
               VerticalTextAlignment="Center"
               Keyboard="Numeric"
               Text="{Binding MovementRecord.Weight}"/>
        
        <Label Grid.Column="1" Grid.Row="7"
               Margin="5, 2"
               VerticalTextAlignment="Center"
               Text="{extensions:Localize Date}"/>
        <material:DatePickerField Grid.Column="1" Grid.Row="8"
                                  Margin="5, 2"
                                  Date="{Binding MovementRecord.Date}"/>

        <Button Grid.Column="1" Grid.Row="11"
                Margin="5, 2"
                Text="{extensions:Localize Save}"
                Command="{Binding GoBackCommand}"/>
    </Grid>
</ContentPage>