<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PersonalRecord.App.Views.SettingsView"
             x:Name="SettingsViewXaml"
             Title="Settings"
             xmlns:viewModels="clr-namespace:PersonalRecord.App.ViewModels"
             xmlns:material="http://schemas.enisn-projects.io/dotnet/maui/uraniumui/material">

    <ContentPage.BindingContext>
        <viewModels:SettingsViewModel/>
    </ContentPage.BindingContext>
    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="20"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="20"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="5"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="5"/>
        </Grid.RowDefinitions>

        <Label Grid.Column="1" Grid.Row="1"
               VerticalTextAlignment="Center"
               Text="Unit"/>
        <material:TextField Grid.Column="2" Grid.Row="1"
                            Text="{Binding Setting.Unit}"/>

        <Label Grid.Column="1" Grid.Row="2"
               VerticalTextAlignment="Center"
               Text="Date format"/>
        <material:TextField Grid.Column="2" Grid.Row="2"
                            Text="{Binding Setting.DateFormat}"/>

    </Grid>
</ContentPage>