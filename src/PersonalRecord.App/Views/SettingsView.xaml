<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PersonalRecord.App.Views.SettingsView"
             x:Name="SettingsViewXaml"
             xmlns:viewModels="clr-namespace:PersonalRecord.App.ViewModels"
             xmlns:material="http://schemas.enisn-projects.io/dotnet/maui/uraniumui/material"
             xmlns:extensions="clr-namespace:PersonalRecord.Infrastructure.Extensions;assembly=PersonalRecord.Infrastructure"
             x:DataType="viewModels:SettingsViewModel"
             Title="{extensions:Localize Settings}">
    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="20"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="20"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="5"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="5"/>
        </Grid.RowDefinitions>

        <Label Grid.Column="1" Grid.Row="1"
               Margin="5, 2"
               VerticalTextAlignment="Center"
               Text="{extensions:Localize Unit}"/>
        <material:TextField Grid.Column="2" Grid.Row="1"
                            Margin="5, 2"
                            Text="{Binding Setting.Unit}"/>

        <Label Grid.Column="1" Grid.Row="2"
               Margin="5, 2"
               VerticalTextAlignment="Center"
               Text="{extensions:Localize DateFormat}"/>
        <material:TextField Grid.Column="2" Grid.Row="2"
                            Margin="5, 2"
                            Text="{Binding Setting.DateFormat}"/>

        <Label Grid.Column="1" Grid.Row="3"
               Margin="5, 2"
               VerticalTextAlignment="Center"
               Text="{extensions:Localize Language}"/>
        <material:PickerField Grid.Column="2" Grid.Row="3"
                              Margin="5, 2"
                              ItemsSource="{Binding Languages}"
                              SelectedItem="{Binding Setting.Language}"/>

        <material:DataGrid Grid.Column="1" Grid.ColumnSpan="2" Grid.Row="4"
                           Margin="5, 10"
                           UseAutoColumns="False"
                           ItemsSource="{Binding Movements}">
            <material:DataGrid.CellItemTemplate>
                <DataTemplate>
                    <Editor Margin="10" Text="{material:DataGridValueBinding Mode=TwoWay}" />
                </DataTemplate>
            </material:DataGrid.CellItemTemplate>
            <material:DataGrid.Columns>
                <material:DataGridColumn ValueBinding="{Binding Name}"
                                         Title="{extensions:Localize Name}"/>
            </material:DataGrid.Columns>
        </material:DataGrid>

    </Grid>
</ContentPage>