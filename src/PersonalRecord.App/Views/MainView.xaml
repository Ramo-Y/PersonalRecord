<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PersonalRecord.App.Views.MainView"
             x:Name="MainViewXaml"
             xmlns:viewModels="clr-namespace:PersonalRecord.App.ViewModels"
             xmlns:extensions="clr-namespace:PersonalRecord.Infrastructure.Extensions;assembly=PersonalRecord.Infrastructure"
             x:DataType="viewModels:MainViewModel"
             Title="{extensions:Localize PersonalRecordTitle}">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="20"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="20"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="5"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="5"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="5"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="5"/>
        </Grid.RowDefinitions>

        <Button Grid.Column="1" Grid.Row="1"
                Margin="5, 2"
                CornerRadius="25"
                Text="{extensions:Localize MovementRecords}"
                Command="{Binding GoToMovementRecordsViewCommand}"/>

        <Button Grid.Column="1" Grid.Row="3"
                Margin="5, 2"
                CornerRadius="25"
                Text="{extensions:Localize Movements}"
                Command="{Binding GoToMovementsViewCommand}"/>

        <Button Grid.Column="1" Grid.Row="5"
                Margin="5, 2"
                CornerRadius="25"
                Text="{extensions:Localize Settings}"
                Command="{Binding GoToSettingsViewCommand}"/>
    </Grid>
</ContentPage>