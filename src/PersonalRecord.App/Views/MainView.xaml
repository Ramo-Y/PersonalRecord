<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PersonalRecord.App.Views.MainView"
             x:Name="MainViewXaml"
             xmlns:viewModels="clr-namespace:PersonalRecord.App.ViewModels"
             xmlns:material="http://schemas.enisn-projects.io/dotnet/maui/uraniumui/material"
             xmlns:lang="clr-namespace:PersonalRecord.Infrastructure.Resources.Languages;assembly=PersonalRecord.Infrastructure"
             x:DataType="viewModels:MainViewModel"
             Title="Personal Records">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="20"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="20"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="5"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="5"/>
        </Grid.RowDefinitions>

        <Button Grid.Column="1" Grid.Row="1"
                Margin="5, 2"
                Text="To GraphicsPage"
                Command="{Binding GoToSettingsViewCommand}"/>

        <material:DataGrid Grid.Column="1" Grid.ColumnSpan="5" Grid.Row="3"
                           Margin="5, 10"
                           UseAutoColumns="False"
                           ItemsSource="{Binding PersonalRecords}">
            <material:DataGrid.CellItemTemplate>
                <DataTemplate>
                    <Editor Margin="10" Text="{material:DataGridValueBinding Mode=TwoWay}" />
                </DataTemplate>
            </material:DataGrid.CellItemTemplate>
            <material:DataGrid.Columns>
                <material:DataGridColumn ValueBinding="{Binding Movement.Name}"
                                         Title="{Static lang:AppResources.Movement}"/>
                <material:DataGridColumn ValueBinding="{Binding Value}"
                                         Title="{Static lang:AppResources.Value}"/>
                <material:DataGridColumn ValueBinding="{Binding Reps}"
                                         Title="{Static lang:AppResources.Reps}"/>
                <material:DataGridColumn ValueBinding="{Binding Date}"
                                         Title="{Static lang:AppResources.Date}"/>
            </material:DataGrid.Columns>
        </material:DataGrid>

    </Grid>
</ContentPage>